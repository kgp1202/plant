<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:divider">@drawable/dialog_divider</item>
    </style>

    <!-- changes the default text colour for the EditTexts -->
    <style name="editTextStyle" parent="android:style/Widget.EditText">
        <item name="android:textColor">@color/colorOrange</item>
    </style>

    <style name="MyDatePicker" parent="@android:style/Widget.DatePicker">
        <item name="android:divider">@drawable/dialog_divider</item>
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="splashScreenTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
         <item name="android:windowBackground">@drawable/splash</item>
    </style>
    <style name="LoginTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/login</item>
    </style>
</resources>
